@using System.Globalization
@using BookingTable.Web.Helpers
@using BookingTable.Web.Resources
@model BookingTable.Entities.Entities.Customer
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">×</span>
    </button>
    <h4 class="modal-title">@Resources.Content_Details</h4>
</div>
<div class="modal-body">
    <ul class="list-group">
        <li class="list-group-item"><img src="@Support.GetPathPhotoFolder()/@Model.Image?dumb=@DateTime.Now.ToString("hhmmss")" class="img-responsive img-thumbnail" alt="Cinque Terre" style="width:250px;height:250px;"></li>
        <li class="list-group-item"><a href="javascript:void(0)">@Resources.Content_Fullname<span class="pull-right">@Model.FullName</span></a></li>
        <li class="list-group-item"><a href="javascript:void(0)">@Resources.Content_Username <span class="pull-right ">@Model.Username</span></a></li>
        <li class="list-group-item"><a href="javascript:void(0)">@Resources.Content_Birthday<span class="pull-right">@Model.DateOfBirth.ToString("yyyy MMMM dd")</span></a></li>
        <li class="list-group-item"><a href="javascript:void(0)">@Resources.Content_Address<span class="pull-right">@Model.Address</span></a></li>
        <li class="list-group-item"><a href="javascript:void(0)">@Resources.Content_Phone<span class="pull-right">@Model.Phone</span></a></li>
        <li class="list-group-item"><a href="javascript:void(0)">@Resources.Content_Email<span class="pull-right">@Model.Email</span></a></li>
        <li class="list-group-item">
            <a href="javascript:void(0)">
                @Resources.Content_Status
                <span class="pull-right">
                    @if (Model.Active != false)
                    {
                        <span class="badge bg-green">@Resources.Content_Active</span>
                    }
                    else
                    {
                        <span class="badge bg-red">@Resources.Content_Inactive</span>
                    }
                </span>
            </a>
        </li>
    </ul>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default pull-left" data-dismiss="modal">@Resources.Content_Close</button>
    <button type="button" class="btn btn-primary bg-blue" data-dismiss="modal" data-toggle="modal" data-target="#formEdit">@Resources.Content_Back</button>
</div>