@using BookingTable.Web.Resources
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">×</span>
    </button>
</div>
<div class="modal-body">
    <form id="formTable">
        <ul class="list-group">
            <li class="list-group-item">
                <div><a href="javascript:void(0)">@Resources.Content_ClearBooking</a></div>
            </li>
        </ul>
    </form>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default pull-left" data-dismiss="modal">@Resources.Content_Close</button>
    <button id="btnDelete" type="button" class="btn btn-primary bg-blue">@Resources.Content_ClearAndRebook</button>
</div>
<script>
    $('#btnDelete')
        .click(function () {
            $.ajax({
                url: '@Url.Action("ClearBooking", "Orders")',
                type: 'DELETE',
                success: function (data) {
                    ShowMessage(data);
                },
                error: function () {
                    ConnectionError();
                }
            });
        });
</script>