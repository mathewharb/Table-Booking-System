                    $('#btnLogin')
                        .click(function () {
                            if ($('#formLogin').valid()) {
                                $.ajax({
                                    url: '@Url.Action("Login", "Login")',
                                    type: 'POST',
                                    data: $('#formLogin').serialize(),
                                    success: function (data) {
                                        ShowMessage(data);
                                        @if (Session["ReturnToUrl"] != null)
                                            {
                                                <text>location.href = '@Session["ReturnToUrl"].ToString()';</text>
                                            }
