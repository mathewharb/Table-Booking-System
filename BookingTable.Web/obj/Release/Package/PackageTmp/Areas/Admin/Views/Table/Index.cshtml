@using BookingTable.Web.Resources
@model IEnumerable<BookingTable.Entities.Entities.Table>
@{
    ViewBag.Title = "Table";
}
<div class="box box-primary">
    <div class="box-header">
        <div class="form-group">
            <button id="btnAddTable" type="button" class="btn btn-default btn-flat pull-right">@Resources.Content_New</button>
        </div>
    </div>
    <!-- /.box-header -->
    <div class="box-body table-responsive">
        <table id="tableTable" class="table table-hover">
            <thead>
                <tr>
                    <th style="width:100px">
                        <a><i class="fa fa-cogs"></i></a>
                    </th>
                    <th>@Resources.Content_Name</th>
                    <th>@Resources.Content_Seats</th>
                    <th>@Resources.Content_Floor</th>
                    <th>@Resources.Content_Type</th>
                    <th>@Resources.Content_Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var table in Model)
                {
                    <tr id="@table.Id">
                        <td>
                            <a href="#" class="editTable"><i class="fa fa-edit"></i></a>
                            <label style="width: 20px;"></label>
                            <a href="#" class="deleteTable"><i class="fa fa-remove"></i></a>
                        </td>
                        <td>@table.Name</td>
                        <td>@table.Seats</td>
                        <td>@table.Floor.Name</td>
                        <td>@table.TableType.Name</td>
                        @if (table.Active != false)
                        {
                            <td>
                                <span class="badge bg-green">@Resources.Content_Active</span>
                            </td>
                        }
                        else
                        {
                            <td>
                                <span class="badge bg-red">@Resources.Content_Inactive</span>
                            </td>
                        }
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>
<script>
    $(document)
        .ready(function () {

            $('#tableTable').DataTable();
        });

    $('#btnAddTable')
               .click(function () {
                   EnterTable(0);
               });
    $('.editTable')
        .click(function () {
            EnterTable($(this).parents().parents().attr('id'));
        });
    $('.deleteTable')
        .click(function () {
            DeleteTable($(this).parents().parents().attr('id'));
        });

    function EnterTable(id) {
        $.ajax({
            url: '@Url.Action("Enter", "Table")/?id=' + id,
            type: 'GET',
            success: function (data) {
                ShowPopup(data);
            },
            error: function () {
                ShowNotification({ 'Title': "Error", 'Content': "Try to reconnect the internet" });
            }
        });
    }

    function DeleteTable(id) {
        $.ajax({
            url: '@Url.Action("Delete", "Table")/?id=' + id,
            type: 'GET',
            success: function (data) {
                ShowPopup(data);
            },
            error: function () {
                ShowNotification({ 'Title': "Error", 'Content': "Try to reconnect the internet" });
            }
        });
    }
</script>