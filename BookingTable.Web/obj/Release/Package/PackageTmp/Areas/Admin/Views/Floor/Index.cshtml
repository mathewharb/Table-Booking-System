@using BookingTable.Web.Resources
@model IEnumerable<BookingTable.Entities.Entities.Floor>
@{
    ViewBag.Title = Resources.Content_Floor;
}
<div class="box box-primary">
    <div class="box-header">
        <div class="form-group">
            <button id="btnAddFloor" type="button" class="btn btn-default btn-flat pull-right">@Resources.Content_New</button>
        </div>
    </div>
    <!-- /.box-header -->
    <div class="box-body table-responsive">
        <table id="tableFloor" class="table table-hover">
            <thead>
                <tr>
                    <th style="width:100px">
                        <a><i class="fa fa-cogs"></i></a>
                    </th>
                    <th>@Resources.Content_Name</th>
                    <th>@Resources.Content_Tables</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var floor in Model)
                {
                    <tr id="@floor.Id">
                        <td>
                            <a href="#" class="addTable"><i class="fa fa-plus"></i></a>
                            <label style="width: 20px"></label>
                            <a href="#" class="editFloor"><i class="fa fa-edit"></i></a>
                            <label style="width: 20px"></label>
                            <a href="#" class="deleteFloor"><i class="fa fa-remove"></i></a>
                        </td>
                        <td>@floor.Name</td>
                        @if (floor.Tables != null)
                        {
                            <td>
                                @floor.Tables.Count()
                            </td>
                        }
                        else
                        {
                            <td>
                                0
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script>
    $(document)
        .ready(function () {
            $('#tableFloor').DataTable();
        });


    $('#btnAddFloor')
        .click(function () {
            EnterFloor(0);
        });
    $('.addTable')
        .click(function () {
            AddTable($(this).parents().parents().attr('id'));
        });
    $('.editFloor')
        .click(function () {
            EnterFloor($(this).parents().parents().attr('id'));
        });

    $('.deleteFloor')
        .click(function () {
            DeleteFloor($(this).parents().parents().attr('id'));
        });
    function AddTable(id) {
        $.ajax({
            url: '@Url.Action("AddTable", "Floor")/?id=' + id,
            type: 'GET',
            success: function (data) {
                ShowPopup(data);
            },
            error: function () {
                ShowNotification({ 'Title': "Error", 'Content': "Try to reconnect the internet" });
            }
        });
    }

    function EnterFloor(id) {
        $.ajax({
            url: '@Url.Action("Enter", "Floor")/?id=' + id,
            type: 'GET',
            success: function (data) {
                ShowPopup(data);
            },
            error: function () {
                ShowNotification({ 'Title': "Error", 'Content': "Try to reconnect the internet" });
            }
        });
    }

    function DeleteFloor(id) {
        $.ajax({
            url: '@Url.Action("Delete", "Floor")/?id=' + id,
            type: 'GET',
            success: function (data) {
                ShowPopup(data);
            },
            error: function () {
                ShowNotification({ 'Title': "Error", 'Content': "Try to reconnect the internet" });
            }
        });
    }
</script>