@using BookingTable.Web.Resources
@model BookingTable.Entities.Models.ChangePasswordModel
@{
    ViewBag.Title = Resources.Content_Password;
}
<div class="form-group col-md-6 col-sm-12 col-xs-12">
    <div class="box box-primary">
        <div class="box-body">
            <form id="formPassword">
                <div class="form-group">
                    <label for="Old">@Resources.Content_OldPassword</label>
                    @Html.PasswordFor(x => x.Old, new { @class = "form-control", placeholder = Resources.Content_OldPassword })
                </div>
                <div class="form-group">
                    <label for="New">@Resources.Content_NewPassword</label>
                    @Html.PasswordFor(x => x.New, new { @class = "form-control", placeholder = Resources.Content_NewPassword })
                </div>
                <div class="form-group">
                    <label for="Confirm">@Resources.Content_PasswordConfirm</label>
                    @Html.PasswordFor(x => x.Confirm, new { @class = "form-control", placeholder = Resources.Content_PasswordConfirm })
                </div>
            </form>
        </div>
        <div class="box-footer">
            <button id="btnSave" type="button" class="btn btn-primary bg-blue pull-right">@Resources.Content_Save</button>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {

        jQuery.validator.addMethod("noSpaceOnly", function (value, element) {
            return value.trim(' ') !== "";
        }, '@Resources.Validate_Required');

        jQuery.validator.addMethod("PasswordConfirm", function (value, element) {
            return $('#New').val() === $('#Confirm').val();
        }, '@Resources.Validate_PasswordConfirm');

        $('#formPassword')
            .validate({
                rules:
                {
                    Old: {
                        noSpaceOnly: true,
                        maxlength: 32
                    },
                    New:
                    {
                        noSpaceOnly: true,
                        maxlength: 32,
                        PasswordConfirm: true
                    },
                    Confirm:
                    {
                        noSpaceOnly: true,
                        maxlength: 32,
                        PasswordConfirm: true
                    }
                },
                messages:
                {
                    Old: {
                        maxlength: '@string.Format(Resources.Validate_LenghtMax,32)'
                    },
                    New:
                    {
                        maxlength: '@string.Format(Resources.Validate_LenghtMax,32)',
                    },
                    Confirm:
                    {
                        maxlength: '@string.Format(Resources.Validate_LenghtMax,32)',
                    }
                }
            });
        $("#btnSave")
            .click(function() {
                if ($("#formPassword").valid()) {
                    $.ajax({
                        url: '@Url.Action("ChangePassword","Admin")',
                        type: 'POST',
                        data: $("#formPassword").serialize(),
                        success: function(data) {
                            if (data.Type !== "success") {
                                ShowNotification(data);
                            } else {
                                location.href = '@Url.Action("LogOut","Login")';
                            }
                        },
                        error: function(data) {
                            ShowNotification(data);
                        }
                    });
                }

            });
    })

</script>
