@using System.Globalization
@using BookingTable.Web.Resources
@model IEnumerable<BookingTable.Entities.Entities.Food>
@{
    ViewBag.Title = Resources.Content_Food;
    var locale = new CultureInfo("en-US");
}
<div class="box box-primary">
    <div class="box-header">
        <div class="form-group">
            <button id="btnAddFood" type="button" class="btn btn-default btn-flat pull-right">@Resources.Content_New</button>
        </div>
    </div>
    <!-- /.box-header -->
    <div class="box-body table-responsive">
        <table id="tableFood" class="table table-hover">
            <thead>
                <tr>
                    <th style="width:100px">
                        <a><i class="fa fa-cogs"></i></a>
                    </th>
                    <th>@Resources.Content_Name</th>
                    <th>@Resources.Content_Unit</th>
                    <th>@Resources.Content_Price</th>
                    <th>@Resources.Content_Quantity</th>
                    <th>@Resources.Content_Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var food in Model)
                {
                    <tr id="@food.Id">
                        <td>
                            <a href="#" class="detailsFood"><i class="fa fa-file"></i></a>
                            <label style="width: 20px"></label>
                            <a href="#" class="editFood"><i class="fa fa-edit"></i></a>
                            <label style="width: 20px"></label>
                            <a href="#" class="deleteFood"><i class="fa fa-remove"></i></a>
                        </td>
                        <td>@food.Name</td>
                        <td>@food.Unit</td>
                        <td>@food.Price.ToString("c", locale)</td>
                        <td><a href="#">@food.Quantity</a></td>
                        @if (food.Active != false)
                        {
                            <td>
                                <span class="badge bg-green">@Resources.Content_Active</span>
                            </td>
                        }
                        else
                        {
                            <td>
                                <span class="badge bg-red">@Resources.Content_Inactive</span>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script>

    $(document)
        .ready(function () {

            $('#tableFood').DataTable();
        });
    $('#btnAddFood')
               .click(function () {
                   EnterFood(0);
               });
    $('.editFood')
        .click(function () {
            EnterFood($(this).parents().parents().attr('id'));
        });
    $('.detailsFood')
        .click(function () {
            DetailsFood($(this).parents().parents().attr('id'));
        });
    $('.deleteFood')
        .click(function () {
            DeleteFood($(this).parents().parents().attr('id'));
        });

    function EnterFood(id) {
        $.ajax({
            url: '@Url.Action("Enter","Food")/?id=' + id,
            type: 'GET',
            success: function (data) {
                ShowPopup(data);
            },
            error: function () {
                ShowNotification({ 'Title': "Error", 'Content': "Try to reconnect the internet" });
            }
        });
    }

    function DetailsFood(id) {
        $.ajax({
            url: '@Url.Action("Details","Food")/?id=' + id,
            type: 'GET',
            success: function (data) {
                ShowPopup(data);
            },
            error: function () {
                ShowNotification({ 'Title': "Error", 'Content': "Try to reconnect the internet" });
            }
        });
    }
    function DeleteFood(id) {
        $.ajax({
            url: '@Url.Action("Delete","Food")/?id=' + id,
            type: 'GET',
            success: function (data) {
                ShowPopup(data);
            },
            error: function () {
                ShowNotification({ 'Title': "Error", 'Content': "Try to reconnect the internet" });
            }
        });
    }

</script>
